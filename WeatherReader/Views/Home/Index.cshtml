@model WeatherReader.Models.Weather

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<table class="table table-condensed">
    <tr>
        <td>
            Country
        </td>
        <td>
            @Model.Country
        </td>
    </tr>
    <tr>
        <td>
            City
        </td>
        <td>
            @Model.City
        </td>
    </tr>
    <tr>
        <td>
            Longitude
        </td>
        <td>
            @Model.Longitude
        </td>
    </tr>
    <tr>
        <td>
            Latitude
        </td>
        <td>
            @Model.Latitude
        </td>
    </tr>
    <tr>
        <td>
            Condition
        </td>
        <td>
            @Model.Condition
        </td>
    </tr>
    <tr>
        <td>
            Current Temperature - Celsius
        </td>
        <td>
            @Model.CurrentTemperature
        </td>
    </tr>
    <tr>
        <td>
            Max Temperature - Celsius
        </td>
        <td>
            @Model.MaxTemperature
        </td>
    </tr>
    <tr>
        <td>
            Min Temperature - Celsius
        </td>
        <td>
            @Model.MinTemperature
        </td>
    </tr>
    <tr>
        <td>
            Pressure
        </td>
        <td>
            @Model.Pressure
        </td>
    </tr>
    <tr>
        <td>
            Windspeed
        </td>
        <td>
            @Model.WindSpeed
        </td>
    </tr>
    <tr>
        <td>
            Sunrise
        </td>
        <td>
            @Model.Sunrise.ToString()
        </td>
    </tr>
    <tr>
        <td>
            Sunset
        </td>
        <td>
            @Model.Sunset.ToString()
        </td>
    </tr>
</table>
